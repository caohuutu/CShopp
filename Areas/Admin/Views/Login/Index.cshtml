
@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập admin</title>
    <link href="~/Content/login-admin.css" rel="stylesheet" />
</head>
<body>
    <div class="login-box">
        @using (Html.BeginForm())
        {
            <div class="login-heading">
                <h4>Đăng nhập admin</h4>
            </div>
            <div class="login-body">
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input value="@ViewBag.taikhoan" type="text" required="required" name="taikhoan" id="taikhoan" placeholder="Username" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input value="@ViewBag.matkhau" type="password" required="required" name="matkhau" id="matkhau" placeholder="Password" class="form-control" />
                </div>
            </div>
            <div class="login-footer">
                <a href="/" style="margin-left:60px">Trở về web</a>
                <a href="" style="margin-right:50px;"><button type="submit">Đăng nhập</button></a>

            </div>
            <p class="text-danger">
                @ViewBag.Error
            </p>
        }
    </div>
</body>
</html>
