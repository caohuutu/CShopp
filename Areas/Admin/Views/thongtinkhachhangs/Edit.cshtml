@model btap.Models.thongtinkhachhang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/layout_admin.cshtml";
}

<h2>Sửa thông tin khách hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>thongtinkhachhang</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.makhachhang)

        <div class="form-group">
            <p class="name-kh">Tên khách hàng</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenkhachhang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenkhachhang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="name-kh">Số điện thoại</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="name-kh">Địa chỉ</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diachi, "", new { @class = "text-danger" })
            </div>
        </div>
        <style>
            .name-kh{
                margin-left:15px;
            }
        </style>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div  class="name-kh">
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>
