@model IEnumerable<btap.Models.tintuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/layout_admin.cshtml";
}

<h2 style="margin-left:20px">Danh sách tin tức</h2>

<p style="margin-left:20px">
    @Html.ActionLink("Thêm mới tin", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tiêu đề
        </th>
        <th>
            Ảnh tin
        </th>
        <th>
            Nội dung
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tieude)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.anhtin)*@
                <img src="~/image/@item.anhtin" style="width: 150px; height:180px;object-fit:cover" />
            </td>
            <td style="text-align: justify">
                @Html.DisplayFor(modelItem => item.noidung)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.matin }) --
                @Html.ActionLink("Chi tiết", "Details", new { id = item.matin }) --
                @Html.ActionLink("Xóa", "Delete", new { id = item.matin })
            </td>
        </tr>
    }

</table>
