@model IEnumerable<btap.Models.thongtinmathang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<body style=" background-color: #f0f0f0;">
    @if (Model.Count() == 0)
    {
        <p style="padding: 20px 20px; margin-bottom: -10px; font-size:14px;; font-weight: 500">Không tìm thấy thông tin sản phẩm</p>
    }
    else
    {
        <div class="content">
            <div class="grid wide">
             
                <div class="content__main">
                   
                    <div class="content__main-product">
                        <ul class="content__main-product-list">
                            @foreach (var item in Model)
                            {
                                <li class="content__main-product-item">
                                    <div class="product">
                                        <a href="~/Home/Chitietsp/@item.mamathang" class="product__link"></a>
                                        <div class="product__img">
                                            <img src="~/image/@item.anh" />
                                        </div>
                                        <p class="product__name">@item.tenmathang</p>
                                        <div class="product__price">
                                            <strong class="product__price-sale">Giá: @item.gia.GetValueOrDefault(0).ToString("N0")đ</strong>

                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    }

    
</body>
        

